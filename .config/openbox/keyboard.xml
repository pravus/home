<keyboard>
  <!--
   *
   * desktops
   *
  -->
  <keybind key="Menu">
    <keybind key="F1">
      <action name="Desktop">
        <desktop>1</desktop>
      </action>
    </keybind>
    <keybind key="F2">
      <action name="Desktop">
        <desktop>1</desktop>
      </action>
    </keybind>
    <keybind key="F3">
      <action name="Desktop">
        <desktop>1</desktop>
      </action>
    </keybind>
    <keybind key="F4">
      <action name="Desktop">
        <desktop>1</desktop>
      </action>
    </keybind>
    <keybind key="d">
      <action name="ToggleShowDesktop"/>
    </keybind>
    <keybind key="s">
      <action name="ToggleOmniPresent"/>
    </keybind>
    <keybind key="Left">
      <action name="ToggleMaximizeHorz"/>
    </keybind>
    <keybind key="Right">
      <action name="ToggleMaximizeHorz"/>
    </keybind>
    <keybind key="Up">
      <action name="ToggleMaximizeVert"/>
    </keybind>
    <keybind key="Down">
      <action name="ToggleMaximizeVert"/>
    </keybind>
    <keybind key="c">
      <action name="Execute">
        <execute>x-calculator</execute>
      </action>
    </keybind>
    <keybind key="e">
      <action name="Execute">
        <execute>urxvt</execute>
      </action>
    </keybind>
    <keybind key="z">
      <action name="Execute">
        <execute>x-screensaver-watch</execute>
      </action>
    </keybind>
  </keybind>

  <keybind key="W-F1">
    <action name="Desktop">
      <desktop>1</desktop>
    </action>
  </keybind>
  <keybind key="W-F2">
    <action name="Desktop">
      <desktop>2</desktop>
    </action>
  </keybind>
  <keybind key="W-F3">
    <action name="Desktop">
      <desktop>3</desktop>
    </action>
  </keybind>
  <keybind key="W-F4">
    <action name="Desktop">
      <desktop>4</desktop>
    </action>
  </keybind>
  <keybind key="W-Prior">
    <action name="DesktopPrevious"/>
  </keybind>
  <keybind key="W-Next">
    <action name="DesktopNext"/>
  </keybind>
  <keybind key="W-d">
    <action name="ToggleShowDesktop"/>
  </keybind>

  <!--
   *
   * windows
   *
  -->
  <keybind key="C-A-Left">
    <action name="MoveResizeTo">
      <width>568</width>
    </action>
  </keybind>
  <keybind key="C-A-Right">
    <action name="MoveResizeTo">
      <width>932</width>
    </action>
  </keybind>
  <keybind key="C-A-Up">
    <action name="MoveResizeTo">
      <height>668</height>
    </action>
  </keybind>
  <keybind key="C-A-Down">
    <action name="MoveResizeTo">
      <height>356</height>
    </action>
  </keybind>
  <keybind key="W-k">
    <action name="ToggleMaximizeVert"/>
    <action name="MoveResizeTo">
      <width>932</width>
    </action>
  </keybind>
  <keybind key="W-l">
    <action name="ToggleMaximizeHorz"/>
    <action name="MoveResizeTo">
      <height>668</height>
    </action>
  </keybind>
  <keybind key="W-n">
    <action name="UnMaximizeHorz"/>
    <action name="UnMaximizeVert"/>
    <action name="MoveResizeTo">
      <height>356</height>
      <width>568</width>
    </action>
  </keybind>
  <keybind key="W-r">
    <action name="Resize"/>
  </keybind>
  <keybind key="W-s">
    <action name="ToggleOmniPresent"/>
  </keybind>
  <keybind key="W-Left">
    <action name="ToggleMaximizeHorz"/>
  </keybind>
  <keybind key="W-Right">
    <action name="ToggleMaximizeHorz"/>
  </keybind>
  <keybind key="W-Up">
    <action name="ToggleMaximizeVert"/>
  </keybind>
  <keybind key="W-Down">
    <action name="ToggleMaximizeVert"/>
  </keybind>
  <keybind key="A-F4">
    <action name="Close"/>
  </keybind>
  <keybind key="A-space">
    <action name="ShowMenu">
      <menu>client-menu</menu>
    </action>
  </keybind>
  <keybind key="A-Tab">
    <action name="NextWindow"/>
  </keybind>
  <keybind key="A-S-Tab">
    <action name="PreviousWindow"/>
  </keybind>

  <!--
   *
   * applications
   *
  -->
  <keybind key="Print">
    <action name="Execute">
      <execute>x-screenshot</execute>
    </action>
  </keybind>
  <keybind key="W-c">
    <action name="Execute">
      <execute>x-calculator</execute>
    </action>
  </keybind>
  <keybind key="W-e">
    <action name="Execute">
      <execute>urxvt</execute>
    </action>
  </keybind>
  <keybind key="W-z">
    <action name="Execute">
      <execute>x-screensaver-watch</execute>
    </action>
  </keybind>
</keyboard>
