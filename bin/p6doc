#!/usr/bin/env perl

use strict;
use warnings;

use Perl6::Perldoc::Parser;
use Perl6::Perldoc::To::Ansi;

my $source_file = $ARGV[0] || \*STDIN;

print Perl6::Perldoc::Parser->parse( $source_file, {all_pod=>'auto'} )
                            ->report_errors()
                            ->to_ansi()
                            ;

__END__ 
